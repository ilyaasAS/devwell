{% extends 'base.html.twig' %}

{% block title %}
    Avis Clients
{% endblock %}

{% block body %}
<div class="container mx-auto py-20 px-6 my-12 max-w-4xl">
    <!-- Titre principal de la page, centré -->
    <h1 class="text-3xl font-bold text-center mb-8 text-primary_dw">Donnez votre avis</h1>

    <!-- Affichage des messages flash d'erreur -->
    {% for message in app.flashes('error') %}
        <div class="bg-red-500 text-white p-3 mb-4 rounded-md">{{ message }}</div>
    {% endfor %}

    <!-- Affichage des messages flash de succès -->
    {% for message in app.flashes('success') %}
        <div class="bg-green-500 text-white p-3 mb-4 rounded-md">{{ message }}</div>
    {% endfor %}

    <!-- Formulaire pour donner un avis -->
    <div class="p-8 bg-white rounded-lg shadow-product hover:shadow-hover transition duration-300 transform hover:scale-105">
        <form method="POST" class="space-y-6">
            <!-- Champ pour le nom de l'utilisateur -->
            <div class="mb-6">
                <label for="nom" class="block text-lg font-medium text-gray-700 mb-2">Nom :</label>
                <input type="text" id="nom" name="nom" class="form-input w-full p-3 border border-gray-300 rounded-lg focus:ring-primary_dw focus:border-primary_dw" required>
            </div>

            <!-- Champ pour l'email de l'utilisateur -->
            <div class="mb-6">
                <label for="email" class="block text-lg font-medium text-gray-700 mb-2">Email :</label>
                <input type="email" id="email" name="email" class="form-input w-full p-3 border border-gray-300 rounded-lg focus:ring-primary_dw focus:border-primary_dw" required>
            </div>

            <!-- Champ pour la note donnée par l'utilisateur (1 à 5) -->
            <div class="mb-6">
                <label for="note" class="block text-lg font-medium text-gray-700 mb-2">Note (1 à 5) :</label>
                <input type="number" id="note" name="note" class="form-input w-full p-3 border border-gray-300 rounded-lg focus:ring-primary_dw focus:border-primary_dw" min="1" max="5" required>
            </div>

            <!-- Champ pour le commentaire de l'utilisateur -->
            <div class="mb-6">
                <label for="commentaire" class="block text-lg font-medium text-gray-700 mb-2">Commentaire :</label>
                <textarea id="commentaire" name="commentaire" class="form-textarea w-full p-3 border border-gray-300 rounded-lg focus:ring-primary_dw focus:border-primary_dw" required></textarea>
            </div>

            <!-- Bouton pour soumettre le formulaire -->
            <div class="mb-6 flex justify-center">
                <button type="submit" class="w-full max-w-xs inline-block bg-primary_dw text-tertiary_dw py-3 px-6 rounded-lg shadow-md hover:bg-secondary_dw hover:text-primary_dw focus:outline-none focus:ring-2 focus:ring-secondary_dw transition duration-300 transform hover:scale-105">Envoyer</button>
            </div>
        </form>
    </div>

    <!-- Titre des avis des clients -->
    <h2 class="mt-10 text-2xl font-semibold">Avis des clients</h2>
    
    <!-- Liste des avis clients -->
<div class="space-y-4 mt-6">
    {% for avis in avisClients %}
        <div class="bg-white p-5 rounded-lg shadow-product hover:shadow-hover transition duration-300 transform hover:scale-105 border border-gray-200">
            <!-- Nom et note de l'avis -->
            <div class="font-semibold text-xl">{{ avis.nom }} ({{ avis.note }}/5)</div>
            
            <!-- Commentaire de l'avis -->
            <p class="mt-2 text-gray-700">{{ avis.commentaire }}</p>
            
            <!-- Date de publication de l'avis -->
            <small class="text-gray-500 mt-3 block">Posté le {{ avis.createdAt|date('d/m/Y') }}</small>
        </div>
    {% endfor %}
</div>

</div>
{% endblock %}
