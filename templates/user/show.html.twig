{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur
{% endblock %}

{% block body %}
	<div
		class="container mx-auto py-20 px-6 my-12 max-w-4xl">
		{# Conteneur principal avec des styles Tailwind pour une mise en page centrée et responsive #}

		<h1 class="text-3xl font-bold mb-8 text-center text-primary_dw">Détails de l'utilisateur</h1>
		{# Titre principal stylisé avec un centrage et une couleur personnalisée #}

		<div
			class="bg-white p-8 rounded-lg shadow-product hover:shadow-hover transition duration-300 transform hover:scale-105">
			{# Carte contenant les détails de l'utilisateur avec effets de survol et ombrage #}

			<table
				class="table-auto w-full border-collapse border border-gray-300">
				{# Tableau des informations utilisateur avec bordures et mise en page fluide #}
				<tbody>
					<tr>
						<th class="border border-gray-300 px-4 py-2">Id</th>
						<td class="border border-gray-300 px-4 py-2">{{ user.id }}</td>
					</tr>
					<tr>
						<th class="border border-gray-300 px-4 py-2">Prénom</th>
						<td class="border border-gray-300 px-4 py-2">{{ user.firstName }}</td>
					</tr>
					<tr>
						<th class="border border-gray-300 px-4 py-2">Nom de Famille</th>
						<td class="border border-gray-300 px-4 py-2">{{ user.lastName }}</td>
					</tr>
					<tr>
						<th class="border border-gray-300 px-4 py-2">Email</th>
						<td class="border border-gray-300 px-4 py-2">{{ user.email }}</td>
					</tr>
					<tr>
						<th class="border border-gray-300 px-4 py-2">Roles</th>
						<td class="border border-gray-300 px-4 py-2">{{ user.roles ? user.roles|join(', ') : '' }}</td>
					</tr>
				</tbody>
			</table>
			{# Affiche les différentes informations de l'utilisateur sous forme de tableau #}

			<div
				class="mt-6 text-center space-y-4">
				{# Conteneur pour les boutons d'action avec un espacement entre eux #}

				<a href="{{ path('app_user_index') }}" class="inline-block bg-primary_dw text-tertiary_dw py-3 px-6 rounded-lg shadow-md
												               hover:bg-secondary_dw hover:text-primary_dw focus:outline-none focus:ring-2
												               focus:ring-secondary_dw transition duration-300 transform hover:scale-105">
					Retour
				</a>
				{# Bouton pour revenir à la liste des utilisateurs, avec animations et effet hover #}

				<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="inline-block bg-yellow-500 text-black py-3 px-6 rounded-lg shadow-md
												               hover:bg-yellow-600 hover:text-white focus:outline-none focus:ring-2
												               focus:ring-yellow-300 transition duration-300 transform hover:scale-105">
					Modifier
				</a>
				{# Bouton pour modifier les informations de l'utilisateur, avec couleur et effets de survol #}

				{{ include('user/_delete_form.html.twig') }}
				{# Inclusion du formulaire de suppression, probablement un fichier contenant un formulaire sécurisé avec un token CSRF #}
			</div>
		</div>
	</div>
{% endblock %}
