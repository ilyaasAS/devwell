{% extends 'base.html.twig' %}  

{% block title %}Inscription{% endblock %}  

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-white py-12 px-4 sm:px-6 lg:px-8">  
    {# Conteneur principal centré verticalement et horizontalement avec une hauteur minimale de l'écran #}

    <div class="max-w-md w-full bg-white p-8 shadow-secondary rounded-md 
                transform transition-transform duration-300 hover:scale-105 hover:shadow-hover">
        {# Conteneur du formulaire avec effet de survol (agrandissement et ombre) pour un effet interactif #}

        <h1 class="text-2xl font-bold text-center mb-8 text-primary_dw">Inscrivez-vous</h1>  
        {# Titre du formulaire stylisé, centré, avec une couleur personnalisée #}

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}  
        {# Début du formulaire Symfony avec un espacement vertical entre les champs #}

            {# CSRF token (sécurité) #}
            {{ form_row(form._token) }}  
            {# Inclusion du token CSRF pour protéger contre les attaques CSRF #}

            <div class="space-y-4">  
                {# Conteneur des champs du formulaire avec un espacement entre eux #}

                <!-- Champ Prénom -->
                <div>
                    {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'block text-sm font-medium text-text_dw'}}) }}
                    {# Étiquette du champ avec un style défini #}

                    {{ form_widget(form.firstName, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                                                                   focus:outline-none focus:ring-secondary_dw focus:border-secondary_dw 
                                                                   transition-all duration-300 hover:scale-105'}}) }}
                    {# Champ de saisie avec styles et effet de survol #}

                    {{ form_errors(form.firstName, {'attr': {'class': 'text-red-500 text-sm'}}) }}
                    {# Affichage des erreurs de validation en rouge si nécessaire #}
                </div>

                <!-- Champ Nom -->
                <div>
                    {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-text_dw'}}) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                                                                focus:outline-none focus:ring-secondary_dw focus:border-secondary_dw 
                                                                transition-all duration-300 hover:scale-105'}}) }}
                    {{ form_errors(form.lastName, {'attr': {'class': 'text-red-500 text-sm'}}) }}
                </div>

                <!-- Champ Email -->
                <div>
                    {{ form_label(form.email, 'Adresse e-mail', {'label_attr': {'class': 'block text-sm font-medium text-text_dw'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                                                              focus:outline-none focus:ring-secondary_dw focus:border-secondary_dw 
                                                              transition-all duration-300 hover:scale-105'}}) }}
                    {{ form_errors(form.email, {'attr': {'class': 'text-red-500 text-sm'}}) }}
                </div>

                <!-- Champ Mot de passe -->
                <div>
                    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-text_dw'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                                                                focus:outline-none focus:ring-secondary_dw focus:border-secondary_dw 
                                                                transition-all duration-300 hover:scale-105'}}) }}
                    {{ form_errors(form.password, {'attr': {'class': 'text-red-500 text-sm'}}) }}
                </div>
            </div>

            <!-- Bouton S'inscrire -->
            <div class="mt-6">
                <button type="submit" 
                    class="inline-block bg-primary_dw text-tertiary_dw px-6 py-3 rounded-lg shadow-md 
                           hover:bg-secondary_dw hover:text-primary_dw focus:bg-secondary_dw 
                           focus:text-primary_dw transition duration-300 transform hover:scale-105 
                           w-full text-center mb-4">
                    S'inscrire
                </button>
                {# Bouton de soumission stylisé avec des effets interactifs au survol et focus #}
            </div>

        {{ form_end(form) }}  
        {# Fin du formulaire Symfony #}
    </div>
</div>
{% endblock %}
{# Fin du bloc du corps de la page #}
