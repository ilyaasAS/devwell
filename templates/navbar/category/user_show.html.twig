{# templates/category/user_show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie
{% endblock %}

{% block body %}
	<div
		class="container mx-auto py-12 px-6 max-w-4xl">
		<!-- Titre de la catégorie, centré -->
		<h1 class="text-4xl font-bold text-center text-primary_dw mb-8">{{ category.name }}</h1>

		<!-- Carte de catégorie avec description -->
		<div
			class="bg-white p-8 rounded-lg shadow-product hover:shadow-hover transition duration-300 transform hover:scale-105">

			<!-- Description de la catégorie (centrée) -->
			<p class="text-lg text-text_dw mb-6 text-center">
				<strong class="font-semibold">Description:</strong>
				{{ category.description ? category.description : 'Pas de description' }}
			</p>

			{% if category.products|length > 0 %}
				<!-- Si des produits existent dans cette catégorie -->
				<h2 class="text-2xl font-bold text-primary_dw mb-4 text-center">Produits dans cette catégorie :</h2>

				<!-- Liste des produits dans la catégorie -->
				<ul class="list-disc pl-0 text-center" style="list-style-position: inside;">
					{% for product in category.products %}
						<li>
							<!-- Lien vers la page de détails du produit -->
							<a href="{{ path('app_product_details', {id: product.id}) }}" class="text-primary_dw hover:text-secondary_dw transition duration-200">
								{{ product.name }}
								- €{{ product.price }}
							</a>
						</li>
					{% endfor %}
				</ul>
			{% else %}
				<!-- Message affiché si aucun produit n'est dans cette catégorie -->
				<p class="text-gray-500 mt-6 text-center">No products in this category.</p>
			{% endif %}

			<!-- Bouton pour retourner à la liste des catégories -->
			<div class="text-center mt-8">
				<a href="{{ path('app_category_user_index') }}" class="w-full max-w-xs inline-block bg-primary_dw text-tertiary_dw py-3 px-6 rounded-lg shadow-md hover:bg-secondary_dw hover:text-primary_dw focus:outline-none focus:ring-2 focus:ring-secondary_dw transition duration-300 transform hover:scale-105">
					Retour à la liste des catégories
				</a>
			</div>
		</div>
	</div>
{% endblock %}
