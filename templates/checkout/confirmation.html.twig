{% extends 'base.html.twig' %}

{% block title %}Votre commande
{% endblock %}

{% block body %}
	<div
		class="container mx-auto mt-10 px-4">
		<!-- Affichage des messages de succès ou d'erreur -->
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger text-red-600 bg-red-100 border border-red-300 rounded-md p-4 mb-4">
				{{ message }}
			</div>
		{% endfor %}

		{% for message in app.flashes('success') %}
			<div class="alert alert-success text-green-600 bg-green-100 border border-green-300 rounded-md p-4 mb-4">
				{{ message }}
			</div>
		{% endfor %}

		<!-- Titre de la page -->
		<h1 class="text-3xl font-bold text-center mb-6">Votre commande</h1>

		<!-- Informations principales de la commande -->
		<div class="bg-white shadow-md rounded-lg p-6 mb-6">
			<p class="text-lg font-medium">
				<strong>Commande :</strong>
				{{ order.id }}</p>
			<!-- ID unique de la commande -->
			<p class="text-lg font-medium">
				<strong>Status :</strong>
				{{ order.status }}</p>
			<!-- Statut actuel de la commande -->
			<p class="text-lg font-medium">
				<strong>Date :</strong>
				{{ order.createdAt|date('Y-m-d H:i') }}</p>
			<!-- Date de création de la commande -->
			<p class="text-lg font-medium">
				<strong>Utilisateur :</strong>
				{{ order.user.email }}</p>
			<!-- Email de l'utilisateur ayant passé la commande -->
		</div>

		<!-- Section des articles de la commande -->
		<h3 class="text-2xl font-semibold mb-4">Articles de la commande :</h3>
		<ul class="space-y-4">
			{% for item in order.orderItems %}
				<li
					class="bg-gray-100 p-4 rounded-lg shadow-md">
					<!-- Affichage des détails de chaque produit de la commande -->
					<strong>{{ item.product.name }}</strong>
					-
					{{ item.quantity }}
					x
					{{ item.price }}€
					<!-- Nom, quantité et prix du produit -->
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
