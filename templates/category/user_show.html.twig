{# templates/category/user_show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
<div class="container mx-auto py-10">
    <h1 class="text-4xl font-semibold mb-6 text-center">{{ category.name }}</h1>

    <div class="bg-white p-6 rounded shadow-md">
        <p class="mb-4"><strong>Description:</strong> {{ category.description ? category.description : 'No Description' }}</p>

        {% if category.products|length > 0 %}
            <h2 class="text-2xl font-semibold mb-4">Products in this Category:</h2>
            <ul class="list-disc pl-6">
                {% for product in category.products %}
                    <li>
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="text-blue-500 hover:underline">
                            {{ product.name }} - ${{ product.price }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-gray-500 mt-6">No products in this category.</p>
        {% endif %}
    </div>

    <div class="mt-6">
        <a href="{{ path('app_category_user_index') }}" class="text-blue-500 hover:underline">Back to category list</a>
    </div>
</div>
{% endblock %}
