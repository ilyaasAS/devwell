{# templates/category/user_index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
<div class="container mx-auto py-10">
    <h1 class="text-4xl font-semibold mb-6 text-center">Category List</h1>

    {% if categories|length > 0 %}
        <div class="grid grid-cols-3 gap-6">
            {% for category in categories %}
                <div class="bg-white p-6 rounded shadow-md">
                    <h2 class="text-xl font-semibold">{{ category.name }}</h2>
                    <p>{{ category.description ? category.description : 'No Description' }}</p>
                    <a href="{{ path('app_category_user_show', {id: category.id}) }}" class="text-blue-500 hover:underline mt-4 block">View Products</a>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-center text-gray-500">No categories found.</p>
    {% endif %}
</div>
{% endblock %}
