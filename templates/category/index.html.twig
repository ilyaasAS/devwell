{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container mx-auto py-12 px-6 max-w-4xl">
    <h1 class="text-4xl font-semibold mb-6 text-center">Category List</h1>

    <div class="flex justify-end mb-6">
        <a href="{{ path('app_category_new') }}" class="bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">Add New Category</a>
    </div>

    {% if categories|length > 0 %}
        <table class="table-auto w-full border-collapse border border-gray-300 shadow-sm rounded-lg">
            <thead class="bg-gray-100">
                <tr>
                    <th class="border border-gray-300 px-4 py-2 text-left">Category Name</th>
                    <th class="border border-gray-300 px-4 py-2 text-left">Description</th>
                    <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr class="odd:bg-white even:bg-gray-50">
                    <td class="border border-gray-300 px-4 py-2">{{ category.name }}</td>
                    <td class="border border-gray-300 px-4 py-2">{{ category.description ? category.description : 'No Description' }}</td>
                    <td class="border border-gray-300 px-4 py-2 flex space-x-4">
                        <a href="{{ path('app_category_show', {id: category.id}) }}" class="text-blue-500 hover:underline">Show</a>
                        <a href="{{ path('app_category_edit', {id: category.id}) }}" class="text-yellow-500 hover:underline">Edit</a>
                        <form method="post" action="{{ path('app_category_delete', {id: category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button type="submit" class="text-red-500 hover:underline">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-center text-gray-500 mt-6">No categories found.</p>
    {% endif %}
</div>
{% endblock %}
