{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
<div class="container mx-auto py-10">
    <h1 class="text-3xl font-semibold mb-6">Edit Category</h1>

    <div class="bg-white p-6 rounded shadow-md">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_widget(form) }}
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Update Category</button>
        {{ form_end(form) }}
    </div>

    <div class="mt-4">
        <a href="{{ path('app_category_index') }}" class="text-blue-500 hover:underline">Back to category list</a>
    </div>
</div>
{% endblock %}
