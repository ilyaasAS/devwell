{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
<div class="container mx-auto py-10">
    <h1 class="text-4xl font-semibold mb-6 text-center">Category Details</h1>

    <div class="bg-white p-6 rounded shadow-md">
        <h2 class="text-2xl font-bold mb-4">{{ category.name }}</h2>
        <p class="mb-2">
            <strong>Description:</strong> 
            {{ category.description ? category.description : 'No Description' }}
        </p>

        {% if category.products|length > 0 %}
            <div class="mt-6">
                <h3 class="text-xl font-semibold mb-2">Products in this Category:</h3>
                <ul class="list-disc pl-6">
                {% for product in category.products %}
                    <li>
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="text-blue-500 hover:underline">
                            {{ product.name }}
                        </a>
                    </li>
                {% endfor %}
                </ul>
            </div>
        {% else %}
            <p class="text-gray-500 mt-6">No products in this category.</p>
        {% endif %}
    </div>

    <div class="mt-6 flex justify-between">
        <a href="{{ path('app_category_index') }}" class="text-blue-500 hover:underline">Back to list</a>
        <a href="{{ path('app_category_edit', {id: category.id}) }}" class="text-yellow-500 hover:underline">Edit Category</a>
    </div>
</div>
{% endblock %}
