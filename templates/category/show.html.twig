{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
<div class="container mx-auto py-12 px-6 max-w-4xl">
    <h1 class="text-4xl font-semibold mb-6 text-center">Category Details</h1>

    <div class="bg-white shadow-md rounded-lg p-8">
        <h2 class="text-3xl font-bold mb-4">{{ category.name }}</h2>
        <p class="text-lg mb-4">
            <strong>Description:</strong>
            <span class="text-gray-700">{{ category.description ? category.description : 'No Description' }}</span>
        </p>

        {% if category.products|length > 0 %}
            <div class="mt-6">
                <h3 class="text-2xl font-semibold mb-3">Products in this Category:</h3>
                <ul class="list-disc pl-6">
                {% for product in category.products %}
                    <li class="mb-2">
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="text-blue-500 hover:text-blue-600 hover:underline">
                            {{ product.name }}
                        </a>
                    </li>
                {% endfor %}
                </ul>
            </div>
        {% else %}
            <p class="text-gray-500 mt-6">No products in this category.</p>
        {% endif %}
        <div class="mt-8 flex justify-between items-center">
        <a href="{{ path('app_category_index') }}" class="text-blue-500 hover:underline">Back to list</a>
        <a href="{{ path('app_category_edit', {id: category.id}) }}" class="text-yellow-500 hover:underline">Edit Category</a>
    </div>
    </div>

    
</div>
{% endblock %}
