{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<div class="container mx-auto py-10">
    <h1 class="text-4xl font-semibold mb-6 text-center">Edit Product</h1>

    <div class="bg-white p-6 rounded shadow-md">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_row(form.name, {'attr': {'class': 'w-full border border-gray-300 px-4 py-2 rounded'}}) }}
            {{ form_row(form.price, {'attr': {'class': 'w-full border border-gray-300 px-4 py-2 rounded'}}) }}
            {{ form_row(form.stock, {'attr': {'class': 'w-full border border-gray-300 px-4 py-2 rounded'}}) }}

{% if product.image %}
    <div class="mb-4">
        <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" class="w-32 h-32 object-cover">
    </div>
{% endif %}

{{ form_row(form.uploadedImage, {'attr': {'class': 'w-full border border-gray-300 px-4 py-2 rounded'}}) }}
            {{ form_row(form.description, {'attr': {'class': 'w-full border border-gray-300 px-4 py-2 rounded'}}) }}
            {{ form_row(form.category, {'attr': {'class': 'w-full border border-gray-300 px-4 py-2 rounded'}}) }}
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Update Product</button>
        {{ form_end(form) }}
    </div>

    <div class="mt-4">
        <a href="{{ path('app_product_index') }}" class="text-blue-500 hover:underline">Back to product list</a>
    </div>
</div>
{% endblock %}
