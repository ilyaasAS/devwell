{% extends 'base.html.twig' %}

{% block title %}Create New Product{% endblock %}

{% block body %}
    <div class="container mx-auto py-8">
        <h1 class="text-4xl font-semibold mb-6 text-center">Create New Product</h1>

        <div class="bg-white p-6 rounded shadow-md">
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                {{ form_row(form.name) }}
                {{ form_row(form.price) }}
                {{ form_row(form.stock) }}
                {{ form_row(form.image) }}
                {{ form_row(form.description) }}
                {{ form_row(form.category) }}
                {{ form_row(form.newCategory) }}
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Create Product</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
