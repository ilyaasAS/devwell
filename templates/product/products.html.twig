{% extends 'base.html.twig' %}

{% block title %}All Products{% endblock %}

{% block body %}
<div class="container mx-auto py-10">
    <h1 class="text-4xl font-semibold mb-6 text-center">Our Products</h1>

    {% if products|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {% for product in products %}
                <div class="bg-white shadow-md rounded p-4">
                    {# <img src="{{ asset(product.image) }}" alt="{{ product.name }}" class="w-full h-48 object-cover mb-4 rounded"> #}
                    <h2 class="text-xl font-bold mb-2">{{ product.name }}</h2>
                    <p class="text-gray-700 mb-2">{{ product.description|slice(0, 100) ~ '...' }}</p>
                    <p class="text-lg font-semibold text-green-600 mb-2">{{ product.price }} â‚¬</p>
                    <a href="{{ path('app_product_details', { id: product.id }) }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 block text-center">View Details</a>
                </div>
                
            {% endfor %}
        </div>
    {% else %}
        <p class="text-center text-gray-500">No products available at the moment. Please check back later!</p>
    {% endif %}
</div>
{% endblock %}
