{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
<div class="container mx-auto py-20 px-6 my-12 max-w-4xl">
    <h1 class="text-4xl font-semibold mb-8 text-center text-primary_dw">Product List</h1>

    <div class="flex justify-end mb-6">
        <a href="{{ path('app_product_new') }}" class="bg-blue-500 text-white px-6 py-3 rounded hover:bg-blue-600">Add New Product</a>
    </div>

    {% if products|length > 0 %}
        <table class="table-auto w-full border-collapse border border-gray-300 mb-8">
            <thead class="bg-gray-100">
                <tr>
                    <th class="border border-gray-300 px-4 py-3">Name</th>
                    <th class="border border-gray-300 px-4 py-3">Price</th>
                    <th class="border border-gray-300 px-4 py-3">Stock</th>
                    <th class="border border-gray-300 px-4 py-3">Category</th>
                    <th class="border border-gray-300 px-4 py-3">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr class="odd:bg-white even:bg-gray-50">
                    <td class="border border-gray-300 px-4 py-3">{{ product.name }}</td>
                    <td class="border border-gray-300 px-4 py-3">{{ product.price }}</td>
                    <td class="border border-gray-300 px-4 py-3">{{ product.stock }}</td>
                    <td class="border border-gray-300 px-4 py-3">{{ product.category ? product.category.name : 'No Category' }}</td>
                    <td class="border border-gray-300 px-4 py-3">
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="text-blue-500 hover:underline">Show</a>
                        <a href="{{ path('app_product_edit', {id: product.id}) }}" class="text-yellow-500 hover:underline ml-4">Edit</a>
                        <form method="post" action="{{ path('app_product_delete', {id: product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button type="submit" class="text-red-500 hover:underline ml-4">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-center text-gray-500">No products found.</p>
    {% endif %}
</div>
{% endblock %}
