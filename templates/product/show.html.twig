{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
<div class="container mx-auto py-10">
    <h1 class="text-4xl font-semibold mb-6 text-center">Product Details</h1>

    <div class="bg-white p-6 rounded shadow-md">
        <h2 class="text-2xl font-bold">{{ product.name }}</h2>
        <p class="mt-2">Price: {{ product.price }} â‚¬</p>
        <p class="mt-2">Stock: {{ product.stock }}</p>
        <p class="mt-2">Category: {{ product.category ? product.category.name : 'No Category' }}</p>
        <p class="mt-2">Description:</p>
        <p class="mt-2">{{ product.description }}</p>
    </div>

    <div class="mt-6">
        <a href="{{ path('app_product_index') }}" class="text-blue-500 hover:underline">Back to Product List</a>
    </div>
</div>
{% endblock %}
